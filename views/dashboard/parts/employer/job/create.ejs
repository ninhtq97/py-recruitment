          !formData.get('quantity') ||
          !formData.get('position') ||
          !formData.get('workFormat') ||
          !formData.get('gender') ||
          !formData.get('experience') ||
          !formData.get('salary') ||
          !formData.get('expirationDate') ||
          !formData.get('describe') ||
          !formData.get('benefitsEnjoyed') ||
          !formData.get('requestJob')

        ) {
