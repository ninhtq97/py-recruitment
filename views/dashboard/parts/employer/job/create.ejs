    <script>
      $(document).ready(function () {
        $('.input-group-solid').inputGroupSolid();
        var date = new Date();
        date.setDate(date.getDate() + 30);

        var newDay = date.getDate();
        var newMonth = date.getMonth() + 1;
        var newYear = date.getFullYear();
        if (parseInt(newDay) < 10) {
          newDay = '0' + newDay
        }
        if (parseInt(newMonth) < 10) {
          newMonth = '0' + newMonth
        }
        var expireDay = newYear + '-' + newMonth + '-' + newDay;
        $('input[name=deadline]').val(expireDay);

        if ($('#salary-type').val() == 'nego') {
          $('#salary-value').hide();
        }
        $.fn.select2.defaults.set('theme', 'bootstrap');
        $('select').select2({
          language: "vi"
        }).on('select2:open', function () {
          $(this).showFormGuideline();
        });
        $('#salary-type').change(function () {
          changeSalaryTypeV2($(this).val());
        });
        $('#experience-type').change(function () {
          changeExperienceType($(this).val());
        });
        $('#job_description-input, #job_requirement-input, #job_benefit-input').summernote({
          disableDragAndDrop: true,
          height: 200,
          toolbar: [
            ['fontstyle', ['fontsize', 'bold', 'italic', 'underline', 'clear']],
            ['parastyle', ['ol', 'ul', 'paragraph']],
            ['misc', ['undo', 'redo']]
          ],
          fontSizes: ['14', '18', '24'],
          callbacks: {
            onPaste: function (e) {
              var bufferText = ((e.originalEvent || e).clipboardData || window.clipboardData).getData('Text');
              e.preventDefault();
              bufferText = bufferText.split('\n').filter((para) => {
                return para != '';
              }).join('\n');
              document.execCommand('insertText', false, bufferText);
            },
            onFocus: function (e) {
              $(this).showFormGuideline();
            }
          }
        });
        $("#jobTitle").autocomplete({
          source: function (request, response) {
            var result = $.ui.autocomplete.filter(suggestJobTitles, request.term);
            response(result.slice(0, 5));
          }
        });
        $('.datepicker').datepicker({
          autoclose: true,
          language: 'vi',
          format: 'yyyy-mm-dd',
          endDate: '+90d',
        });
        $('#categoryIds').select2({
          placeholder: "Chọn ngành nghề",
          maximumSelectionLength: 3,
          language: "vi",
        });
        $('#cityIds').select2({
          placeholder: "Chọn địa điểm",
          language: "vi"
        });
        $('#skillIds').select2({
          placeholder: "VD: Photoshop, PHP, HTML.. vv",
          language: "vi",
          tags: true,
          tokenSeparators: [","],
          createTag: function (tag) {
            return {
              id: tag.term,
              text: tag.term,
              isNew: true
            };
          }
        });
        // Initialize categories selector
        $('#children-category-selector').select2('destroy').select2({
          placeholder: "Chọn nghề"
        });
        $('#contact-email-selector').select2({
          placeholder: "Nhập email cách nhau bởi dấu phẩy",
          language: "vi",
          tags: true,
          tokenSeparators: [',', ' ', ';', '/'],
          maximumSelectionLength: 5,
          createTag: function (tag) {
            return {
              id: tag.term,
              text: tag.term,
              isNew: true
            };
          }
        });
        $('#job_tag_ids').select2({
          placeholder: "Chọn nhóm công việc để tiếp cận nhóm ứng viên phù hợp với yêu cầu công việc",
          language: "vi",
        });

        $("#job_type_select").change(function (event) {
          toggleKeyWord();
        });

        function toggleKeyWord() {
          let jobType = $("#job_type_select").val();
          if (jobType == 7) {
            $('#job-tag-wrap').show();
          } else {
            $('#job-tag-wrap').hide();
          }
        }
        toggleKeyWord();

        $('#btn-submit').click(function (event) {
          event.preventDefault();
          if (validate()) {
            $('#form-add-job').submit();
            $('#btn-submit').prop('disabled', true);
            return true;
          }
          return false;
        });
      });
    </script>


